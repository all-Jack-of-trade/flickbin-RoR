<ul class="afterLoginBtns">
  <li>  <span class="postHoverTip">Post a Video</span> </li>
<!--  <li>-->
<!--    <a href="/tv" class="play-item icon-play-alt"></a>-->
<!--  </li>-->
  <li class="notificationDropdown">
    <% if current_user.present? && current_user.top_15_notifications.count {|n| n.read == false } > 0 %>
      <span class="addCircle bell icon-bell">
        <span class="notificationBadge"></span>
      </span>
    <% else %>
      <span class="addCircle bell icon-bell"></span>
    <% end %>
    <div class="jq-dropdown jq-dropdown-medium push-left jq-dropdown-tip jq-dropdown-anchor-right">
      <div class="jq-dropdown-panel jq-dropdown-panel-medium">
        <div class="dropdown-menu notifications dropdown-menu-medium"></div>
      </div>
    </div>
  </li>

  <li><%= link_to '+', videos_new_path, class: "addCircle" %></li>
  <li class="profileDropdownHolder">
    <div class='profileDropdown'>
      <%= image_tag(current_user.avatar.thumb_44x44.url || '/images/avatar_holder.jpg', class: 'avatarHolder') %>
    </div>
    <div class="jq-dropdown push-left jq-dropdown-tip jq-dropdown-anchor-right">
      <div class="jq-dropdown-panel">
        <ul class="dropdown-menu">
          <li>
            <%= link_to 'Post a Video', videos_new_path, class: "current" %>
          </li>
          <li class="jq-dropdown-divider">&nbsp;</li>
          <li>
            <%= link_to 'Account Settings', edit_user_registration_path %>
          </li>
          <li class="jq-dropdown-divider">&nbsp;</li>
          <li>
            <%= link_to 'Logout', destroy_user_session_path, method: :delete %>
          </li>
        </ul>
      </div>
    </div>
  </li>
</ul>
