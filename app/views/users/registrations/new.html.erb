<%= link_to 'Birdy', root_path %>
<h1>Sign up and start curating.</h1>
<h3>Start showing the world your favorite videos.</h3>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :channel_name %><br />
    <%= f.text_field :channel_name, autofocus: true %><br />
    <%= f.error :channel_name %>
  </div>

  <div class="field">
    <%= f.label :email, 'Email Address' %><br />
    <%= f.email_field :email, autocomplete: "email" %><br />
    <%= f.error :email %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "new-password" %><br />
    <%= f.error :password %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
    <%= link_to "Log in", new_session_path(resource_name) %>
    <%= link_to "Forgot password?", new_password_path(resource_name) %>
  </div>
<% end %>
