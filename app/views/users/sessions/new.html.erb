<% content_for :meta_title, 'Birdy - Login' %>
<% content_for :meta_description, 'Birdy - Login' %>
<% content_for :meta_keywords, 'Birdy - Login' %>

<div class="loginBg">
  <div class="loginAside">
    <%= link_to "Birdy", root_path, class: "brand inLogin" %>
    <h2 class="loginTitle">Start catching up. <span>Log back into birdy and start where you left off.</span></h2>

    <% if flash[:alert].present? %>
      <div class="flashError">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="labelFields">
        <%= f.label :email, 'Email Address' %>
        <%= f.email_field :email, placeholder: 'Enter your email', class: 'block' %>
      </div>

      <div class="labelFields">
        <%= f.label :password %>
        <%= f.password_field :password, placeholder: 'Enter your password', class: 'block' %>
      </div>

      <div class="clearfix btnFromLeft">
        <%= f.submit "Log in", class: "btn" %>
        <%= link_to "Sign up", new_user_registration_path, class: "btn noBg" %>
        <%= link_to "Forgot password?", new_password_path(resource_name), class: "forgotLinks fRight" %>
      </div>
    <% end %>
  </div>
</div>
