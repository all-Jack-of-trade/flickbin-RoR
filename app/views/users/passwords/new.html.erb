<div class="loginBg">
  <div class="loginAside">
    <%= link_to "flickbin", root_path, class: "brand inLogin" %>
    <h2 class="loginTitle">Forgot your password?</h2>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <div class="labelFields">
        <%= f.label :email, 'Email Address' %>
        <%= f.email_field :email, placeholder: 'Enter your email', class: 'block' %>
        <%= f.error :email, class: 'error' %>
      </div>

      <div class="clearfix btnFromLeft">
        <%= f.submit "Send me reset password instructions", class: "btn" %>
      </div>
    <% end %>
  </div>
</div>
