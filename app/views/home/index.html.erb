                      <%= image_tag(top_video.cover.url, alt: top_video.title, class: "thumbnail") %>
                      <span class="playerIcon displayNone"><i class="fas fa-play"></i></span>
                    <% end %>
                  </div>
                  <div class="entityCell serialText"><%= index + 1 %></div>
                  <div class="entityCell">
                    <%= link_to top_video.title, video_path(top_video), class: "descText homeTitle" %>
                  </div>
                </li>
            <% end %>
            </ul>
          </div>
        <% end %>
        <% if @top_4_tag.present? && @top_4_tag.top_10_videos.size == 10 %>
          <div id="<%= @top_4_tag.id %>" class="vidRowColumn right_tag">
            <div class="clearfix bottom-margin-15">
                <span class="sideTitle"><%= @top_4_tag.title %></span>
                <%= link_to 'SEE ALL', tag_path(@top_4_tag), class: "seeAllLink" %>
            </div>

            <ul class="entityList top_4_tag">
              <% @top_4_tag.top_10_videos.each_with_index do |top_video, index| %>
                <li class="entityRow">
                  <div class="entityCell thumbnailCell">
                    <%= link_to video_path(top_video), class: "thumbnailLink" do %>
                      <%= image_tag(top_video.cover.url, alt: top_video.title, class: "thumbnail") %>
                      <span class="playerIcon displayNone"><i class="fas fa-play"></i></span>
                    <% end %>
                  </div>
                  <div class="entityCell serialText"><%= index + 1 %></div>
                  <div class="entityCell">
                    <%= link_to top_video.title, video_path(top_video), class: "descText homeTitle" %>
                  </div>
                </li>
              <% end %>
            </ul>
          </div>
        <% end %>
      </div>
    </div>
  </section>
</div>

<%= javascript_include_tag('specific_by_templates/home') %>
