<% if flash[:notice].present? %>
  <div class="flashNotification">
    <%= flash[:notice] %>
  </div>
<% end %>

<% if flash[:notice].to_s == I18n.t('devise.registrations.signed_up_but_unconfirmed') %>
  <div class='flashNotification'>
    You can
    <%= link_to 'resend the confirmation', new_confirmation_path(:user) %>
    if you haven't received confirmation instructions.
  </div>
<% end %>

<div class="wrapper">
  <div class="offCanvasMask"></div>
  <aside class="leftPanel">
    <button type="button" class="offCanvasBtn offCanvasBtnStyle hideOnDesktop">
      <span class="offCanvasBar">&nbsp;</span>
      <span class="offCanvasBar">&nbsp;</span>
      <span class="offCanvasBar">&nbsp;</span>
    </button>

    <%= link_to "flickbin", root_path, class: "brand" %>
    <% if current_user.present? %>
      <div class="clearfix hideOnDesktop mobileBtnPosition">
        <%= render 'partials/logged_in_right_header' %>
      </div>
    <% end %>

    <%= render 'partials/trending_tags_bar' %>
  </aside>
  <div class="jq-dropdown-mobile jq-dropdown-medium push-left jq-dropdown-anchor-right">
    <div class="jq-dropdown-panel jq-dropdown-panel-medium">
      <div class="dropdown-menu notifications dropdown-menu-medium"></div>
    </div>
  </div>
  <section class="contentPanel home">
    <% if current_user.present? %>
      <div class="clearfix bottom-margin-40 mobileThemeBtn hideOnMobile">
        <%= render 'partials/logged_in_right_header' %>
      </div>
    <% else %>
      <div class="clearfix btnGroup hideOnMobile">
        <%= render 'partials/right_header' %>
      </div>
    <% end %>
    <div class="homeOnboardingContainer">
      <div class="homeOnboardingCopy">
        <%= image_tag("/images/flickBearOnboarding.png", alt: 'flickbear', class: 'flickbearHomeOnboarding') %>
        <p><strong>Welcome!</strong> flickbin is a collection of the best videos from around the web, submitted, organized and ranked by our community.</p>
      </div>
      <div class="homeOngoardingButtonContainer">
        <% if current_user.present? %>
          <%= link_to 'Start Contributing, Post a Video!', videos_new_path, class: "homeOnboardingButton" %>
        <% else %>
          <%= link_to 'Sign Up and Join the Community', new_user_registration_path, class: "homeOnboardingButton" %>
        <% end %>
      </div>
    </div>
    <div class="row video-feed">
      <div class="vidRowContainer">
        <% if @top_1_tag.present? && @top_1_tag.top_10_videos.size == 10 %>
          <div id="<%= @top_1_tag.id %>" class="vidRowColumn colTitle mobileColBottom left_tag">
            <div class="clearfix bottom-margin-15">
              <span class="sideTitle"><%= @top_1_tag.title %></span>
              <%= link_to 'SEE ALL', tag_path(@top_1_tag), class: "seeAllLink" %>
            </div>

            <ul class="entityList">
              <% @top_1_tag.top_10_videos.each_with_index do |top_video, index| %>
                <li class="entityRow">
                  <div class="entityCell thumbnailCell">
                    <%= link_to video_path(top_video), class: "thumbnailLink" do %>
                      <%= image_tag(top_video.cover.url.to_s, alt: top_video.title, class: "thumbnail") %>
                      <span class="playerIcon displayNone"><i class="fas fa-play"></i></span>
                    <% end %>
                  </div>
                  <div class="entityCell serialText"><%= index + 1 %></div>
                  <div class="entityCell">
                    <%= link_to top_video.title, video_path(top_video), class: "descText homeTitle" %>
                  </div>
                </li>
            <% end %>
            </ul>
          </div>
        <% end %>
        <% if @top_2_tag.present? && @top_2_tag.top_10_videos.size == 10 %>
          <div id="<%= @top_2_tag.id %>" class="vidRowColumn right_tag">
            <div class="clearfix bottom-margin-15">
                <span class="sideTitle"><%= @top_2_tag.title %></span>
                <%= link_to 'SEE ALL', tag_path(@top_2_tag), class: "seeAllLink" %>
            </div>

            <ul class="entityList top_2_tag">
              <% @top_2_tag.top_10_videos.each_with_index do |top_video, index| %>
