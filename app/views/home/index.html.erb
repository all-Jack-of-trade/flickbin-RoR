                  <div class="entityCell thumbnailCell">
                    <%= link_to video_path(top_video), class: "thumbnailLink" do %>
                      <%= image_tag(top_video.cover.url.to_s, alt: top_video.title, class: "thumbnail") %>
                      <span class="playerIcon displayNone"><i class="fas fa-play"></i></span>
                    <% end %>
                  </div>
                  <div class="entityCell serialText"><%= index + 1 %></div>
                  <div class="entityCell">
                    <%= link_to top_video.title, video_path(top_video), class: "descText homeTitle" %>
                  </div>
                </li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <% if @top_3_tag.present? && @top_3_tag.top_10_videos.size == 10 %>
          <div id="<%= @top_3_tag.id %>" class="vidRowColumn colTitle mobileColBottom left_tag">
            <div class="clearfix bottom-margin-15">
              <span class="sideTitle"><%= @top_3_tag.title %></span>
              <%= link_to 'SEE ALL', tag_path(@top_3_tag), class: "seeAllLink" %>
            </div>

            <ul class="entityList">
              <% @top_3_tag.top_10_videos.each_with_index do |top_video, index| %>
