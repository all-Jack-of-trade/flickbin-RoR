<% if @video.kind_of == 'video' %>
  <iframe
    src="https://player.twitch.tv/?autoplay=true&muted=false&video=v<%= @video.source_id %>"
    height="600"
    width="800"
    frameborder="0"
    scrolling="false"
    allowfullscreen="false">
  </iframe>
<% elsif @video.kind_of == 'clip' %>
  <iframe
    src="https://clips.twitch.tv/embed?autoplay=true&muted=false&clip=<%= @video.source_id %>"
    height="600"
    width="800"
    frameborder="0"
    scrolling="false"
    allowfullscreen="false">
  </iframe>
<% elsif @video.kind_of == 'stream' %>
  <iframe
    src="https://player.twitch.tv/?autoplay=true&muted=false&channel=<%= @video.source_id %>"
    height="600"
    width="800"
    frameborder="0"
    scrolling="false"
    allowfullscreen="false">
  </iframe>
<% end %>
